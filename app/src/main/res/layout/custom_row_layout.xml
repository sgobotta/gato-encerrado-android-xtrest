<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LabDetailsFragment">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Imagen del laberinto"
        android:id="@+id/row_lab_image"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RowTextView"
        android:id="@+id/row_text_view"
        android:layout_toRightOf="@+id/row_lab_image"
        android:layout_toEndOf="@+id/row_lab_image"
        android:textSize="20sp"
        android:padding="5dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Check si esta en juego"
        android:id="@+id/check_image_playing"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>
